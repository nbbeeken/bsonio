{
    "compilerOptions": {
        "allowJs": false,
        "target": "ESNext",
        "module": "ESNext",
        "outDir": "lib",
        "moduleResolution": "node",
        "removeComments": true,
        "sourceMap": true,
        "useDefineForClassFields": true,
        "strict": true,
        "alwaysStrict": true,
        "pretty": false,
        "allowSyntheticDefaultImports": true
    }
}
