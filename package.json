{
    "name": "bsonio",
    "version": "1.0.0",
    "description": "",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "scripts": {
        "build:dts": "tsc || true && api-extractor run",
        "pretest": "npm run build:cjs && npm run build:test",
        "test": "node --enable-source-maps lib/bson.test.js",
        "get-corpus": "sh ./etc/get_bson_corpus.sh",
        "build:cjs": "esbuild src/index.ts --minify --bundle --target=es2015 --format=cjs --platform=node --sourcemap --strict --outfile=lib/index.cjs",
        "build:mjs": "esbuild src/index.ts --minify --bundle --target=es2015 --format=esm --platform=node --sourcemap --strict --outfile=lib/index.mjs",
        "build:iife": "esbuild src/index.ts --bundle --target=es2015 --format=iife --global-name=BSON --platform=browser --sourcemap --strict --outfile=lib/index.bundle.js",
        "build:test": "esbuild test/run_tests.ts --bundle --target=es2015 --format=cjs --platform=node --sourcemap --strict --outfile=lib/bson.test.js",
        "build": "npm run build:cjs && npm run build:mjs && npm run build:iife && npm run build:test"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@microsoft/api-extractor": "^7.9.17",
        "@types/tape": "^4.13.0",
        "esbuild": "^0.7.1",
        "tape": "^5.0.1",
        "typescript": "^4.0.2"
    }
}
