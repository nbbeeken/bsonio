    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Debug Tests",
            "sourceMaps": true,
            "stopOnEntry": true,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/lib/test.js",
            "outFiles": [
                "${workspaceFolder}/lib/*"
            ],
            "preLaunchTask": "npm: pretest"
        }
    ]
}
